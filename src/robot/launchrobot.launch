 <launch>
    <node pkg="lite_arm_2" name="rb_joint_base_node" type="rb_joint_base_node.py" cwd="node" output="screen"></node>
    <node pkg="lite_arm_2" name="rb_joint_extension_node" type="rb_joint_extension_node.py" cwd="node" output="screen"></node>
    <node pkg="lite_arm_2" name="rb_joint_wrist_node" type="rb_joint_wrist_node.py" cwd="node" output="screen"></node>
    <node pkg="lite_arm_2" name="rb_main_node" type="rb_led_heartbeat_node.py" cwd="node" output="screen"></node>

    <arg name="model" default="$(find lite_arm_2)/robot_arm.urdf"/>
    <arg name="gui" default="true" />
    <param name="robot_description" command="$(find xacro)/xacro $(arg model)" />



</launch>
