<?xml version="1.0"?>
<robot name="3dof_robot_arm">

  <!-- Colors -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.10 0.10 0.01"/>
      </geometry>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.10 0.10 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.0008" ixy="0.0" ixz="0.0" iyy="0.0008" iyz="0.0" izz="0.0017"/>
    </inertial>
  </link>

  <!-- First Link (Cylinder) -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder radius="0.0325" length="0.085"/>
      </geometry>
      <origin xyz="0 0 0.0425" rpy="0 0 0"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.0325" length="0.085"/>
      </geometry>
      <origin xyz="0 0 0.0425" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0.0425" rpy="0 0 0"/>
      <inertia ixx="0.0003" ixy="0.0" ixz="0.0" iyy="0.0003" iyz="0.0" izz="0.0002"/>
    </inertial>
  </link>

  <!-- First Joint (Yaw) -->
  <joint name="base_to_link1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.005" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-3.14" upper="3.14" effort="100" velocity="1.0"/>
  </joint>

  <!-- Second Link -->
  <link name="link2">
    <visual>
      <geometry>
        <box size="0.16 0.02 0.02"/>
      </geometry>
      <origin xyz="0.08 0 0" rpy="0 0 0"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.16 0.02 0.02"/>
      </geometry>
      <origin xyz="0.08 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0.08 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0008" iyz="0.0" izz="0.0008"/>
    </inertial>
  </link>

  <!-- Second Joint (Pitch) -->
  <joint name="link1_to_link2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.085" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.09" upper="0.52" effort="100" velocity="1.0"/>
  </joint>

  <!-- Third Link -->
  <link name="link3">
    <visual>
      <geometry>
        <box size="0.17 0.02 0.02"/>
      </geometry>
      <origin xyz="0.085 0 0" rpy="0 0 0"/>
      <material name="grey"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.17 0.02 0.02"/>
      </geometry>
      <origin xyz="0.085 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin xyz="0.085 0 0" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0009" iyz="0.0" izz="0.0009"/>
    </inertial>
  </link>

  <!-- Third Joint (Pitch) -->
  <joint name="link2_to_link3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0.16 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0.087" upper="3.14" effort="100" velocity="1.0"/>
  </joint>

  <!-- End Effector Link -->
  <link name="end_effector">
    <visual>
      <geometry>
        <box size="0.05 0.01 0.01"/>
      </geometry>
      <origin xyz="0.025 0 0" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.05 0.01 0.01"/>
      </geometry>
      <origin xyz="0.025 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.025 0 0" rpy="0 0 0"/>
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00004" iyz="0.0" izz="0.00004"/>
    </inertial>
  </link>

  <!-- End Effector Joint (Pitch) -->
  <joint name="link3_to_end_effector" type="revolute">
    <parent link="link3"/>
    <child link="end_effector"/>
    <origin xyz="0.17 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>

</robot>
